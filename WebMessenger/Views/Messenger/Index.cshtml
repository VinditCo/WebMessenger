@model List<MessageModel>

<div id="chat">
    
    <div id = "input">
        <form id="frm-send-message" action="#">
            <label for="message">Message:</label>
            <input type="text" id="message"/>
            <div id = "sendButton">
                <input type="submit" id="send" value="Send"/>
            </div>
           
        </form>
        <div style="display: none;" id="inputNotification"></div>
    </div>
    
    
    <div id="messages">

        @foreach (var m in @Model) {
            <script src="~/js/addRemoveMessages.js"></script>
            <script src="~/lib/jquery/dist/jquery.js" type="text/javascript"></script>
            <script> addMessage($, '#messages', { message: '@m.Content', id: '@m.ID', timeStamp: '@m.TimeStamp' }) </script>
                                                                                                              
        }
        MUST ADD DELETE
    </div>
    <div style="display: none;" id="pageNotification">
        
    </div>

</div>

